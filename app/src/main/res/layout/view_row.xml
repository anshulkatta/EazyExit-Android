<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view_row"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:background="@color/colorWhiteBackground"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/off_view_row"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:elevation="4dp"
        style="@style/AppTheme.RoundedCornerMaterialButtonOff"
        android:text="OFF"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:elevation="4dp"
        android:id="@+id/on_view_row"
        android:layout_width="88dp"
        android:layout_height="36dp"
        style="@style/AppTheme.RoundedCornerMaterialButtonOn"
        android:text="ON"
        android:textColor="@color/colorTextPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/name_view_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="zzz"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="zzz"
        android:id="@+id/location_view_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_view_row"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>